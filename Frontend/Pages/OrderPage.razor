@page "/OrderPage"
@inherits OrderBase


<h3>Your Order Is:</h3>

<div class="container mt-5">
    @if (basketproducts == null)
    {
        <h4>Sorry your basket is empty please select some products...</h4>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Ammount</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var basketProduct in basketproducts)
                {
                    <tr>
                        <th scope="row">@basketProduct.Product.Id</th>
                        <td>@basketProduct.Product.Name</td>
                        <td>@basketProduct.Product.ProductCategoryId</td>
                        <td>
                            <img src="@basketProduct.Product.ImageUrl" style="width:40px;height:40px" />
                        </td>
                        <td class="text-center">
                            <div class="">
                                <button class="btn btn-sm btn-outline-success mr-1" @onclick="() => Decrease(basketProduct.Product)">-</button>
                                <input maxlength="2" name="" class="col-2 text-center" value="@basketProduct.Amount">
                                <button class="btn btn-sm btn-outline-danger ml-1" @onclick="() => Increase(basketProduct.Product)">+</button>
                            </div>
                        </td>
                        <td><button type="button" class="btn btn-danger btn-sm" @onclick="() => Remove(basketProduct)">X</button></td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <button class="btn btn-sm btn-primary btn-block mt-5" @onclick="() => SendOrder(basketproducts)">Send Order</button>
        </div>
    }
</div>


