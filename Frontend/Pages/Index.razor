@page "/"
@inherits IndexBase

@if (products == null)
{
    <div class="mt-5 text-center w-100">
        <img src="./Images/spinner.gif" style="width:20%;height:5%" />
    </div>
}
else
{
    <div>
        <h1>Products</h1>
        <form @onsubmit="SearchProducts" class="mb-3">
            <div class="form-inline">
                <input class="form-control" placeholder="Enter product name..." maxlength="60" @bind="@ProductSearchQuery" />
                <button type="submit" class="btn btn-primary mx-sm-2">Search</button>
            </div>
        </form>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var product in GetFeaturedProducts())
                {
                    <div class="card carousel-item text-white bg-primary mb-3 @(GetFeaturedProducts()[0] == product ? "active" : "")"
                         style="max-height:240px">
                        <div class="card-header">
                            Featured products
                        </div>
                        <a href=@($"productdetails/{product.Id}") class="text-white" style="text-decoration: none">
                            <div class="card-body" href="@($"productdetails/{product.Id}")">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
            @if (GetFeaturedProducts().Count > 1)
            {
                <a class="carousel-control-prev carousel-control-smaller" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon carousel-control-icon-smaller" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next carousel-control-smaller" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon carousel-control-icon-smaller" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            }
        </div>
        @if (products.Count() <= 0)
        {
            <div class="mt-3">Sorry, no matches for “@ProductSearchQuery” could be found.</div>
        }
        else
        {
            <div class="row">
                @foreach (var product in products)
                {
                    if (product.Stock > 0)
                    {
                        <div class="col-sm-4 p-3">
                            <div class="card">
                                <div class="d-flex justify-content-center p-2">
                                    <a href="@($"productdetails/{product.Id}")">
                                        <img src="@("https://promoboxx.com/wp-content/uploads/2013/01/promoboxx_icon__white_200x2002.png")" style="width:150px;height:150px" />
                                    </a>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="text-secondary text-center h2 font-weight-bold">Stock: @product.Stock</p>
                                    <p class="card-text">@(product.IsAvailable ? "Available" : "Not Available")</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
}